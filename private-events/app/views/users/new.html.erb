  <div class="col-md-6 col-md-offset-3">
    <h1>Sign up</h1>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control"%><br />
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %><br />
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    <% end %>
  </div>
